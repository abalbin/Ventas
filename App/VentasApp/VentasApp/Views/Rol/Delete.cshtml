@model VentasApp.Models.webpages_Roles

@{
    ViewBag.Title = "Eliminar";
}

<h3>¿Estás seguro que deseas eliminar este registro?</h3>
<fieldset>
    <legend>Rol</legend>

    <div class="display-label">
         Nombre:
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.RoleName)
    </div>
</fieldset>
@using (Html.BeginForm()) {
    <div>
        @Html.Bootstrap().SubmitButton().Text("Eliminar").Style(ButtonStyle.Danger)
        @Html.Bootstrap().ActionLinkButton("Regresar a la lista",
                    "Index", "Rol")
    </div>
}
