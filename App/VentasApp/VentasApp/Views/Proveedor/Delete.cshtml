@model VentasApp.Models.Proveedor

@{
    ViewBag.Title = "Eliminar";
}

<h3>¿Estás seguro que deseas eliminar este registro?</h3>
<fieldset>
    <legend>Proveedor</legend>

    <div class="display-label">
         @Html.DisplayNameFor(model => model.Nombre)
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Nombre)
    </div>

    <div class="display-label">
         @Html.DisplayNameFor(model => model.Mail)
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Mail)
    </div>
</fieldset>
@using (Html.BeginForm()) {
    <div>
        @Html.Bootstrap().SubmitButton().Text("Eliminar").Style(ButtonStyle.Danger)
        @Html.Bootstrap().ActionLinkButton("Regresar a la lista",
                    "Index", "Proveedor")
    </div>
}
