@model IEnumerable<VentasApp.Models.Campania>

<table class="table table-striped data-table-campania">
    <thead>
        <tr>
            <th>Nombre
            </th>
        </tr>
    </thead>
    @foreach (var item in Model)
    {        
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
        </tr>
    }                       
</table>

